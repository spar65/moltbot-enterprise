import { render, screen } from '@testing-library/react';
import { Button } from './Button';

describe('Button', () => {
  it('applies the correct base styles', () => {
    render(<Button>Test Button</Button>);
    const button = screen.getByRole('button', { name: 'Test Button' });
    
    // Test base classes are present
    expect(button).toHaveClass('inline-flex');
    expect(button).toHaveClass('items-center');
    expect(button).toHaveClass('rounded-md');
  });
  
  it('applies the correct variant styles', () => {
    render(<Button variant="destructive">Destructive Button</Button>);
    const button = screen.getByRole('button', { name: 'Destructive Button' });
    
    // Test variant-specific classes
    expect(button).toHaveClass('bg-destructive');
    expect(button).toHaveClass('text-destructive-foreground');
  });
  
  it('applies the correct size styles', () => {
    render(<Button size="lg">Large Button</Button>);
    const button = screen.getByRole('button', { name: 'Large Button' });
    
    // Test size-specific classes
    expect(button).toHaveClass('h-11');
    expect(button).toHaveClass('px-8');
  });
  
  it('merges custom classNames correctly', () => {
    render(<Button className="custom-class">Custom Button</Button>);
    const button = screen.getByRole('button', { name: 'Custom Button' });
    
    // Test that custom class is added without removing other classes
    expect(button).toHaveClass('custom-class');
    expect(button).toHaveClass('inline-flex'); // Base class still exists
  });
});
